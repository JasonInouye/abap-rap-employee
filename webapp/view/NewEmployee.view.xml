<mvc:View
	controllerName="EmployeeSkillApp.employeeskill.controller.NewEmployee"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">
	<semantic:SemanticPage
		id="employeeListPage"
		class="sapUiResponsiveContentPadding"
		showNavButton=".onNavBack">
		<semantic:titleHeading>

            <!-- <Title
                text="Add New Employee"
                level="H2"/> -->
			
        </semantic:titleHeading>
		<layout:HorizontalLayout id="inputs" visible="true">
			<layout:VerticalLayout>
				<f:SimpleForm id="sampleForm">
					<f:content>
						<Label text="First Name" design="Bold"/>
						<Input value="{FirstName}"/>
						<Label text="Last Name" design="Bold"/>
						<Input value="{LastName}"/>
						<Label text="Title" design="Bold"/>
						<Input value="{Title}"/>
						<Label text="Department" design="Bold"/>
						<Input value="{Department}"/>
						<Label text="Email" design="Bold"/>
						<Input value="{Email}"/>
						<Label text="Address" design="Bold"/>
						<Input value="{Address}"/>
						<Label text="City" design="Bold"/>
						<Input value="{City}"/>
						<Label text="State" design="Bold"/>
						<Input value="{State}"/>
						<Label text="Zipcode" design="Bold"/>
						<Input value="{Zipcode}"/>
						<Label text="Country" design="Bold"/>
						<Input value="{Country}"/>
					</f:content>
				</f:SimpleForm>
				<Button id="saveAction" text="Save" press="onSave" />
			</layout:VerticalLayout>
		</layout:HorizontalLayout>

	</semantic:SemanticPage>
</mvc:View>